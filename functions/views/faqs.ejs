<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<script src="https://cdn.quilljs.com/1.3.6/quill.min.js" type="text/javascript"></script>
<div class="content-body">
    <section class="snow-editor">
        <div class="row">
            <div class="col-12">
                <div class="card" id="descriptionCard">
                    <div class="card-header">
                        <h4 style=" display: inline-block;" class="PageHeading">About App</h4>
                        <div class="d-inline mr-2" style="margin-left:auto;">
                            <button class="btn btn-primary" onclick="EditTerms()" type="button">
                                Edit
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <div id="TermsBody">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card" style="display:none;" id="editCard">
                    <div class="card-header">
                        <h4 class="PageHeading">About App</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div id="snow-wrapper">
                                    <div id="snow-container">
                                        <div class="quill-toolbar">
                                            <span class="ql-formats">
                                                <select class="ql-header">
                                                    <option value="1">Heading</option>
                                                    <option value="2">Subheading</option>
                                                    <option selected>Normal</option>
                                                </select>
                                                <select class="ql-font">
                                                    <option selected>Sailec Light</option>
                                                    <option value="sofia">Sofia Pro</option>
                                                    <option value="slabo">Slabo 27px</option>
                                                    <option value="roboto">Roboto Slab</option>
                                                    <option value="inconsolata">Inconsolata</option>
                                                    <option value="ubuntu">Ubuntu Mono</option>
                                                </select>
                                            </span>
                                            <span class="ql-formats">
                                                <button class="ql-bold"></button>
                                                <button class="ql-italic"></button>
                                                <button class="ql-underline"></button>
                                            </span>
                                            <span class="ql-formats">
                                                <button class="ql-list" value="ordered"></button>
                                                <button class="ql-list" value="bullet"></button>
                                            </span>
                                            <span class="ql-formats">
                                                <button class="ql-link"></button>
                                                <button class="ql-image"></button>
                                                <button class="ql-video"></button>
                                            </span>
                                            <span class="ql-formats">
                                                <button class="ql-formula"></button>
                                                <button class="ql-code-block"></button>
                                            </span>
                                            <span class="ql-formats">
                                                <button class="ql-clean"></button>
                                            </span>
                                        </div>
                                        <div class="editor">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div style="float:right;margin-top: 12px;">
                                    <button onclick="hideEditSection()" class="btn btn-danger">Cancel</button>
                                    <button id="update_terms" onclick="UpdateTerms()" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script src="app-assets/js/faqs.js"></script>